<Window x:Class="WpfApp.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="Settings" Height="450" Width="800" PreviewKeyDown="Window_PreviewKeyDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Championship odabir -->
        <Label 
        x:Name="lbChamp" 
        Content="Choose championship" 
        HorizontalAlignment="Center" 
        Margin="0,12,0,0" 
        VerticalAlignment="Top" 
        Width="240" 
        FontSize="22" 
        FontWeight="Bold" 
        Grid.Row="0" />

        <ComboBox 
        x:Name="cbChamp" 
        HorizontalAlignment="Center" 
        Margin="0,10,0,0" 
        VerticalAlignment="Top" 
        Width="240" 
        Height="28" 
        IsReadOnly="True" 
        Grid.Row="1">
            <ComboBoxItem Content="Men's championship" />
            <ComboBoxItem Content="Women's championship" />
        </ComboBox>

        <!-- odabir jezika -->
        <Label 
        x:Name="lbLang" 
        Content="Choose language" 
        HorizontalAlignment="Center" 
        Margin="0,10,0,0" 
        VerticalAlignment="Top" 
        Width="240" 
        FontSize="22" 
        FontWeight="Bold" 
        Grid.Row="2" />

        <ComboBox 
        x:Name="cbLang" 
        HorizontalAlignment="Center" 
        Margin="0,10,0,0" 
        VerticalAlignment="Top" 
        Width="240" 
        Height="28" 
        IsReadOnly="True" 
        Grid.Row="3">
            <ComboBoxItem Content="Croatian" />
            <ComboBoxItem Content="English" />
        </ComboBox>

        <!--Main window velicina-->
        <Label 
        x:Name="lbMainSize" 
        Content="Choose main window size" 
        HorizontalAlignment="Center" 
        Margin="0,10,0,0" 
        VerticalAlignment="Top" 
        Width="278" 
        FontSize="22" 
        FontWeight="Bold" 
        Grid.Row="4" />

        <ComboBox 
        x:Name="cbMainSize" 
        HorizontalAlignment="Center" 
        Margin="0,10,0,0" 
        VerticalAlignment="Top" 
        Width="240" 
        Height="28" 
        IsReadOnly="True" 
        Grid.Row="5">
            <ComboBoxItem Content="Small" />
            <ComboBoxItem Content="Large" />
            <ComboBoxItem Content="Fullscreen" />
        </ComboBox>

        <!-- Gumbovi -->
        <StackPanel 
        Orientation="Horizontal" 
        HorizontalAlignment="Center" 
        VerticalAlignment="Bottom" 
        Margin="10" 
        Grid.RowSpan="6">
            <Button 
            x:Name="btnApply" 
            Content="Apply" 
            Width="132" 
            Height="30" 
            FontSize="14" 
            Margin="5" 
            Click="btnApply_Click" />
            <Button 
            x:Name="btnNext" 
            Content="Next" 
            Width="132" 
            Height="30" 
            FontSize="14" 
            Margin="5" 
            Click="btnNext_Click" />
        </StackPanel>
    </Grid>
</Window>
