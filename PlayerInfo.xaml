<Window x:Class="WpfApp.PlayerInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        WindowStartupLocation="CenterScreen"
        Opacity="0"
        Title="PlayerInfo" Height="350" Width="400">
    
    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Viewbox Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10">
            <Image x:Name="imgPlayer" Source="pack://application:,,,/Images/default.png" Stretch="Uniform"/>
        </Viewbox>

        <Grid Grid.Row="1" Margin="10">
           
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

         
            <Label 
        Content="Name:" 
        Grid.Row="0" Grid.Column="0" 
        VerticalAlignment="Center" 
        HorizontalAlignment="Right" 
        Margin="5" />
            <Label 
        Name="lbNameOut" 
        Grid.Row="0" Grid.Column="1" 
        VerticalAlignment="Center" 
        HorizontalAlignment="Left" 
        Margin="5" />

          
            <Label 
        Content="Number:" 
        Grid.Row="1" Grid.Column="0" 
        VerticalAlignment="Center" 
        HorizontalAlignment="Right" 
        Margin="5" />
            <Label 
        Name="lbNumberOut" 
        Grid.Row="1" Grid.Column="1" 
        VerticalAlignment="Center" 
        HorizontalAlignment="Left" 
        Margin="5" />

          
            <Label 
        Content="Position:" 
        Grid.Row="2" Grid.Column="0" 
        VerticalAlignment="Center" 
        HorizontalAlignment="Right" 
        Margin="5" />
            <Label 
        Name="lbPositionOut" 
        Grid.Row="2" Grid.Column="1" 
        VerticalAlignment="Center" 
        HorizontalAlignment="Left" 
        Margin="5" />

          
            <Label 
        Content="Captain:" 
        Grid.Row="3" Grid.Column="0" 
        VerticalAlignment="Center" 
        HorizontalAlignment="Right" 
        Margin="5" />
            <Label 
        Name="lbCaptainOut" 
        Grid.Row="3" Grid.Column="1" 
        VerticalAlignment="Center" 
        HorizontalAlignment="Left" 
        Margin="5" />

          
            <Label 
        Content="Scored goals:" 
        Grid.Row="4" Grid.Column="0" 
        VerticalAlignment="Center" 
        HorizontalAlignment="Right" 
        Margin="5" />
            <Label 
        Name="lbScoredGoalsOut" 
        Grid.Row="4" Grid.Column="1" 
        VerticalAlignment="Center" 
        HorizontalAlignment="Left" 
        Margin="5" />

           
            <Label 
        Content="Yellow cards:" 
        Grid.Row="5" Grid.Column="0" 
        VerticalAlignment="Center" 
        HorizontalAlignment="Right" 
        Margin="5" />
            <Label 
        Name="lbYellowCardsOut" 
        Grid.Row="5" Grid.Column="1" 
        VerticalAlignment="Center" 
        HorizontalAlignment="Left" 
        Margin="5" />
        </Grid>

    </Grid>
</Window>
