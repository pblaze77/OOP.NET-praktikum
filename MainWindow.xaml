<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="Main window" Height="450" Width="800"
        Loaded="MainWindow_Loaded" Closing="Window_Closing">
    <Grid Background="#FF38CE30">
        <Viewbox HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid>
              
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

              
                <ComboBox 
            Grid.Column="0" 
            Grid.Row="0" 
            x:Name="cbFavourite" 
            Background="White" 
            HorizontalAlignment="Stretch" 
            Margin="80,20,5,5" 
            VerticalAlignment="Stretch" 
            Width="195" 
            SelectionChanged="cbFavourite_SelectionChanged" />
                <Button 
            Grid.Column="0" 
            Grid.Row="0" 
            x:Name="btnFavouriteInfo" 
            Background="White" 
            Content="Info" 
            HorizontalAlignment="Stretch" 
            Margin="10,20,210,5" 
            VerticalAlignment="Stretch" 
            Width="50" 
            Height="21" 
            Click="btnFavouriteInfo_Click" />

                <ComboBox 
            Grid.Column="2" 
            Grid.Row="0" 
            x:Name="cbAgainst" 
            Background="White" 
            Margin="5,20,80,5" 
            VerticalAlignment="Stretch" 
            Width="195" 
            SelectionChanged="cbAgainst_SelectionChanged" />
                <Button 
            Grid.Column="2" 
            Grid.Row="0" 
            x:Name="btnAgainstInfo" 
            Background="White" 
            Content="Info" 
            HorizontalAlignment="Stretch" 
            Margin="210,20,10,5" 
            VerticalAlignment="Stretch" 
            Width="50" 
            Height="21" 
            Click="btnAgainstInfo_Click" />

                <Label 
            Grid.Column="1" 
            Grid.Row="0" 
            x:Name="lbResult" 
            Content="" 
            HorizontalContentAlignment="Center" 
            HorizontalAlignment="Stretch" 
            Margin="10,20,10,5" 
            VerticalAlignment="Stretch" 
            Width="50" 
            FontSize="18" 
            Foreground="White" 
            RenderTransformOrigin="0.5,0.5" 
            Loaded="lbResult_Loaded">
                    <Label.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform />
                            <SkewTransform />
                            <RotateTransform Angle="0.148" />
                            <TranslateTransform />
                        </TransformGroup>
                    </Label.RenderTransform>
                </Label>

               
                <Border 
            Grid.Row="1" 
            Grid.Column="0" 
            BorderBrush="White" 
            BorderThickness="2" 
            CornerRadius="2" 
            Padding="0" 
            Background="#FF38CE30">
                    <ScrollViewer 
                HorizontalScrollBarVisibility="Auto" 
                VerticalScrollBarVisibility="Auto" 
                MaxWidth="300" 
                MaxHeight="500" 
                Margin="10,0,15,10">
                        <StackPanel x:Name="panelFavourite" />
                    </ScrollViewer>
                </Border>

                <Border 
            Grid.Row="1" 
            Grid.Column="2" 
            BorderBrush="White" 
            BorderThickness="2" 
            CornerRadius="2" 
            Padding="3" 
            Background="#FF38CE30">
                    <ScrollViewer 
                HorizontalScrollBarVisibility="Auto" 
                VerticalScrollBarVisibility="Auto" 
                MaxWidth="300" 
                MaxHeight="500" 
                Margin="15,0,10,10">
                        <StackPanel x:Name="panelEnemy" />
                    </ScrollViewer>
                </Border>

                <Grid 
            x:Name="gridField" 
            Grid.Row="1" 
            Grid.Column="1" 
            MinHeight="440" 
            MinWidth="300" 
            Margin="0,10,0,10">
                    <Grid.Background>
                        <ImageBrush ImageSource="pack://application:,,,/Images/pitch.png" Stretch="UniformToFill" />
                    </Grid.Background>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition Width="50" />
                        <ColumnDefinition Width="50" />
                        <ColumnDefinition Width="50" />
                        <ColumnDefinition Width="50" />
                    </Grid.ColumnDefinitions>
                </Grid>

              
                <Button 
            Grid.Column="1" 
            Grid.Row="2" 
            x:Name="btnSettings" 
            Content="Settings" 
            HorizontalAlignment="Stretch" 
            Margin="0,10,0,10" 
            VerticalAlignment="Stretch" 
            Width="100" 
            Height="20" 
            Click="btnSettings_Click" />
            </Grid>
        </Viewbox>

    </Grid>
</Window>
